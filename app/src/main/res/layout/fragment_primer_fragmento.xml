<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimerFragmento"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="3dp">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/TVFragmento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="@string/fragment1_placeholder"
        android:inputType="text" />

    <SeekBar
        android:id="@+id/BarraF1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@color/Gris"
        android:progressTint="@color/Gris"
        android:min="1"
        android:max="100"
        android:progress="1"/>

    <Button
        android:id="@+id/btnCambiarTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambiar_texto"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>